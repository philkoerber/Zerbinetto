[Unit]
Description=Zerbinetto Auto-Deploy Service
After=network.target docker.service
Requires=docker.service

[Service]
Type=oneshot
User=root
WorkingDirectory=/opt/zerbinetto
ExecStart=/opt/zerbinetto/scripts/deploy.sh update
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/zerbinetto

[Install]
WantedBy=multi-user.target
