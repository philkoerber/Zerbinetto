[Unit]
Description=Zerbinetto GitHub Webhook Server
After=network.target
Wants=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/zerbinetto
ExecStart=/usr/bin/python3 /opt/zerbinetto/scripts/webhook_server.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/zerbinetto

[Install]
WantedBy=multi-user.target
